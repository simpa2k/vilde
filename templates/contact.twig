<div id="contact" class="col-xs-12">

    <h1 class="text-center">Bokning och press</h1>

    <div class="row">
        <div class="col-xs-4">
            <p class="text-right"><span class="red">Mail</span>:</p>
        </div>
        <div class="col-xs-8">
            <p>{{ contact.mail }}</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4">
            <p class="text-right"><span class="red">Telefon</span>:</p>
        </div>
        <div class="col-xs-8">

            {% for contactperson in contact.contactpersons%}
                <div class="row">

                    <div class="col-xs-5">
                        <p>{{ contactperson.name }}</p>
                    </div>
                    <div class="col-xs-5">
                        <p>{{ contactperson.phonenumber }}</p>
                    </div>

                </div>
            {% endfor %}

        </div>
    </div>
</div>